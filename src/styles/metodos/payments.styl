.payments
  background-image url(../images/gradient-bg.png)

  &__container
    margin 0 auto
    padding 2rem
    width 1200px

  &__section
    position relative

    &:last-child
      padding-top 8rem

  &__splash
    display block
    margin 0 auto
    padding 0
    width 60%

  &__text-debt
    color white
    font-size 1.1rem
    left 310px
    position absolute
    text-align center
    top 110px
    width 300px

  &__picture-debt
    display inline-block
    height 70px
    left 830px
    position relative
    top -400px

    &Image
      height 60px

    &Text
      color white
      font-weight bold
      text-align center

  &__see-debt
    bottom -120px
    color white
    display inline-block
    font-weight bold
    left -10px
    position relative
    text-decoration none
    transition all 0.25s ease

    &:hover
      text-decoration underline

  &__credit
    display block
    margin 0 auto
    position relative
    transform rotate(180deg)
    width 60%

    &Text
      color white
      font-size 1.1rem
      left 560px
      position absolute
      text-align center
      top 150px
      width 350px

    &Picture
      display inline-block
      left 270px
      position absolute
      top 310px

      &Image
        height 70px

      &Text
        color white
        font-weight bold
        text-align center

    &See-more
      color white
      font-weight bold
      left 310px
      position absolute
      text-decoration none
      top 153px

      &:hover
        text-decoration underline

  &__vales
    display block
    margin 0 auto
    position relative
    width 60%

    &Text
      color white
      font-size 1.1rem
      left 300px
      position absolute
      text-align center
      top 245px
      width 320px

    &Picture
      display inline-block
      left 820px
      position absolute
      text-align center
      top 160px

      &Image
        height 70px

      &Text
        color white
        font-size 1.1rem
        font-weight bold

    &See-more
      bottom 145px
      color white
      font-weight bold
      position absolute
      right 310px
      text-decoration none

      &:hover
        text-decoration underline

  &__modalDebit
  &__modalCredit
  &__modalVales
    transition all 0.25s ease

    &[data-active='true']
      background-color rgba(180, 180, 180, 0.9)
      height auto
      left 0
      min-height 100%
      position fixed
      right 0
      top 0
      z-index 10

    &[data-active='false']
      display none

    &Container
      background-color rgb(250, 250, 250)
      border-radius 0.35rem
      box-sizing border-box
      height 50vh
      margin 10vh auto 0 auto
      padding 2rem
      overflow scroll
      width 600px

  &__modalCredit
    &[data-active='false']
      display none

  @media all and (max-width 500px)
    width 100%

    &__container
      margin 0 auto
      padding 2rem 0
      width 100%

    &__splash
      margin-top 4rem
      transform rotate(90deg)
      width 200px
