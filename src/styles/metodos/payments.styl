.payments
  &__container
    margin 0 auto
    padding 2rem
    width 1200px

  &__section
    position relative

  &__splash
    display block
    margin 0 auto
    padding 0
    width 60%

  &__text-debt
    color white
    font-size 1.1rem
    left 310px
    position absolute
    text-align center
    top 110px
    width 300px

  &__picture-debt
    display inline-block
    height 70px
    left 830px
    position relative
    top -400px

    &Image
      height 60px

    &Text
      color white
      font-weight bold
      text-align center

  &__see-debt
    bottom -120px
    color white
    display inline-block
    font-weight bold
    left -10px
    position relative
    text-decoration none
    transition all 0.25s ease

    &:hover
      text-decoration underline

  &__credit
    display block
    margin 0 auto
    position relative
    transform rotate(180deg)
    width 60%

    &Text
      color white
      font-size 1.1rem
      left 560px
      position absolute
      text-align center
      top 150px
      width 350px

    &Picture
      display inline-block
      left 270px
      position absolute
      top 310px

      &Image
        height 70px

      &Text
        color white
        font-weight bold
        text-align center

    &See-more
      color white
      font-weight bold
      left 310px
      position absolute
      text-decoration none
      top 153px

      &:hover
        text-decoration underline

