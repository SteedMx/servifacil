.hero
  &__container
    margin 0 auto
    padding 2rem 0
    width 1200px

  &__logo
    display block
    margin 0 auto
    height 45px

  &__title
    font-size 2.5rem
    margin 4rem auto
    text-align center

  &__image
    height 100px

  &__float
    overflow hidden
    padding 0
    width 100%

  &__section
    display inline-block
    float left
    margin 0
    padding 0
    text-align center
    width 33.3%

  &__label
    font-size 1.5rem
    font-weight bold
    padding 1rem
