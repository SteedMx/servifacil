.grow { transition: all .2s ease-in-out; }
.grow:hover { transform: scale(1.1); }
.hero
  background url(../images/metodos-gradient-bg.png),
             url(../images/terminal-bg.jpg)
  background-position center top
  background-repeat no-repeat
  background-size cover
  height 100vh
  overflow hidden
  font-family 'Flama Basic'

  &__container
    margin 0 auto
    padding 2rem 0
    width 1200px

  &__logo
    display block
    margin 0 auto 6rem auto
    height 45px
    text-align center

  &__title
    color rgb(250, 250, 250)
    font-size 7rem
    margin 4rem auto
    text-align center

  &__image
    max-height: 192px;
    max-width: 84vw;

  &__float
    overflow hidden
    padding 2rem 0
    width 100%
    display flex
    align-items center
    justify-content space-around

  &__section
    display inline-block
    float left
    margin 0
    padding 0
    text-align center

  &__label
    color white
    display block
    font-size 1.5rem
    font-weight bold
    padding 1rem
    text-decoration none

    &:hover
      text-decoration underline

  @media all and (max-width 500px)
    margin 0
    padding 0
    width 100vw
    overflow auto

    &__container
      box-sizing border-box
      margin 0
      padding 2rem 0
      width 100%

    &__title
      box-sizing border-box
      font-size 1.5rem
      margin 6rem auto 4rem auto

    /*
    &__section
      display none
    */

    &__float
      flex-direction column

    &__label
      color white
      font-size 1.2rem
      margin 0 auto
      padding 0

  @media all and (min-width 501px) and (max-width 850px)
    &__container
      margin 0
      width 100%

    &__title
      font-size 2rem
      margin 4rem 2rem 2rem 2rem
      padding 0

  @media all and (min-width 851px) and (max-width 1200px)
    &__container
      margin 0
      width 100%

    &__title
      font-size 3rem
      margin 4rem 2rem 2rem 2rem
      padding 0
