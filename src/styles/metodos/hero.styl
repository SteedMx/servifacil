.hero
  background url(../images/metodos-gradient-bg.png),
             url(../images/terminal-bg.jpg)
  background-position center top
  background-repeat no-repeat
  background-size cover
  font-family 'Flama Basic'

  &__container
    margin 0 auto
    padding 2rem 0
    width 1200px

  &__logo
    display block
    margin 0 auto 6rem auto
    height 45px
    text-align center

  &__title
    color rgb(250, 250, 250)
    font-size 7rem
    margin 8rem auto
    text-align center

  &__image
    height 100px

  &__float
    overflow hidden
    padding 2rem 0
    width 100%

  &__section
    display inline-block
    float left
    margin 0
    padding 0
    text-align center
    width 33.3%

  &__label
    color white
    display block
    font-size 1.5rem
    font-weight bold
    padding 1rem
    text-decoration none

    &:hover
      text-decoration underline

  @media all and (max-width 500px)
    margin 0
    padding 0
    width 100vw

    &__container
      box-sizing border-box
      margin 0
      padding 2rem 0
      width 100%

    &__title
      box-sizing border-box
      font-size 1.5rem
      margin 6rem auto 4rem auto

    &__section
    &__float
      display none

    &__label
      color white
      font-size 1.2rem
      margin 0 auto
      padding 0

  @media all and (min-width 501px) and (max-width 850px)
    &__container
      margin 0
      width 100%

    &__title
      font-size 2rem
      margin 4rem 2rem 2rem 2rem
      padding 0

  @media all and (min-width 851px) and (max-width 1200px)
    &__container
      margin 0
      width 100%

    &__title
      font-size 3rem
      margin 4rem 2rem 2rem 2rem
      padding 0
