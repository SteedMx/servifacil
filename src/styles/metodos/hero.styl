.hero
  background url(../images/metodos-gradient-bg.png),
             url(../images/metodos-bg.png)
  background-position center top
  background-repeat no-repeat
  background-size cover

  &__container
    margin 0 auto
    padding 8rem 0
    width 1200px

  &__logo
    display block
    margin 0 auto
    height 45px

  &__title
    color rgb(250, 250, 250)
    font-size 2.5rem
    margin 4rem auto
    text-align center
    text-shadow 2px 2px 2px rgb(80, 80, 80)

  &__image
    height 100px

  &__float
    overflow hidden
    padding 0
    width 100%

  &__section
    display inline-block
    float left
    margin 0
    padding 0
    text-align center
    width 33.3%

  &__label
    font-size 1.5rem
    font-weight bold
    padding 1rem

  @media all and (max-width 500px)
    &__container
      margin 0
      padding 2rem 0
      width 100%

    &__title
      font-size 1.5rem
      margin 2rem

    &__section
      clear both
      display block
      margin 0 auto 2rem auto
      text-align center
      width 100%

    &__label
      color white
      font-size 1.2rem
      margin 0 auto
      padding 0
