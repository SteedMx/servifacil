#mgas-modal
  .modal
    &__container
      height 80vh
#sprov-modal
  .modal
    &__container
      height 90vh
#bolsa-modal
  .modal
    &__container
      height 90vh
#qs-modal,#mvv-modal,#ser-gas,#ser-fact
  .modal
    @media all and (max-width 550px)
      &__container
        height: 97vh;
.modal
  background-color rgba(220, 220, 220, 0.8)

  &[data-active='true']
    height auto
    left 0
    min-height 100%
    position fixed
    right 0
    top 0
    z-index 100

  &[data-active='false']
    display none

  &__container
    background-color rgba(253, 0, 0, 0.74)
    border-radius 0.35rem
    box-sizing border-box
    color #fff
    //height 80vh
    margin 4rem auto 0 auto
    padding 2rem
    position relative
    overflow auto
    width 80vw
    z-index 100

  &__container--gray
    background-color rgba(228, 228, 228, 1)

    &--mini
      background-color white
      border-radius 0.35rem
      box-sizing border-box
      color gray
      height auto
      margin 4rem auto
      padding 1rem
      width 800px

  &__close
    background-color transparent
    border 0px solid white
    //border-radius 50%
    text-align center
    color white
    position absolute
    top 15px
    right 15px
    height 30px
    width 30px
    display inline-block
    font-size 1.5rem

    &:hover
      cursor pointer

  &__header
    align-content center
    align-items center
    display flex
    justify-content space-between
    padding 1rem 0
    margin-right 10vw

  &__box
    //width 550px

    &--full
      width 100%

  &__title
    display inline-block
    margin 2rem 0 0 0

    &:first-child
      margin 0

  &__link
    color rgb(250, 250, 250)
    font-weight bold

  &__backgroundCircle
    height 150px
    position absolute
    right 0
    top 140px

  &__backgroundWorker
    position absolute
    right 0
    top 0

  &__backgroundOrange
    height 130px
    position absolute
    top 10px
    right 0

  &__backgroundSplash
    height 500px

    position absolute
    right 0
    top 30px
    z-index -1

  &__form
    margin 0 auto
    padding 0
    width 100%

  &__input
  &__textarea
  &__select
  &__submit
    border none
    border-radius 0.25rem
    display inline-block
    box-sizing border-box
    margin 0.5rem 1%
    padding 0.5rem
    text-align left
    vertical-align top
    width 45%

  &__textarea
    display block
    width 92%

  &__submit
    background-color #c33
    color white
    font-weight bold
    text-align center
    width 92%

  &__text
    margin 0

  &__block
    display block
    margin 0.5rem

  @media all and (max-width 550px)
    &__container
      margin 1rem auto
      width 90%

    &__box
      margin 0
      width 100%

    &__input
    &__textarea
    &__submit
    &__select
      display block
      width 100%

    &__form
      margin 0 auto
      padding 0
      width 100%

    &__backgroundOrange
    &__backgroundWorker
    &__backgroundCircle
      display none

  @media all and (max-width 920px) and (min-width 551px)
    margin 0 auto

    &__container
      margin 1rem auto
      width 90%

    &__backgroundOrange
    &__backgroundWorker
    &__backgroundCircle
      display none

#map
  height 500px
