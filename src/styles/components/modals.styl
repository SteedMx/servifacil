.modal
  background-color rgba(220, 220, 220, 0.8)

  &[data-active='true']
    height auto
    left 0
    min-height 100%
    position fixed
    right 0
    top 0
    z-index 100

  &[data-active='false']
    display none

  &__container
    background-color #2b285f
    border-radius 0.35rem
    box-sizing border-box
    color white
    height 80vh
    margin 4rem auto 0 auto
    padding 2rem
    position relative
    overflow auto
    width 800px
    z-index 100

    &--mini
      background-color #2b285f
      border-radius 0.35rem
      box-sizing border-box
      color white
      height auto
      margin 4rem auto
      padding 1rem
      width 800px

  &__close
    background-color transparent
    border 2px solid white
    color white
    display inline-block
    font-size 0.8rem
    padding 0.35rem 1rem

    &:hover
      cursor pointer

  &__header
    align-content center
    align-items center
    display flex
    justify-content space-between
    padding 1rem 0

  &__box
    width 550px

    &--full
      width 100%

  &__title
    display inline-block
    margin 2rem 0 0 0

    &:first-child
      margin 0

  &__link
    color rgb(250, 250, 250)
    font-weight bold

  &__backgroundCircle
    height 150px
    position absolute
    right 0
    top 140px

  &__backgroundWorker
    height 120px
    position absolute
    right 50px
    top 157px

  &__backgroundOrange
    height 130px
    position absolute
    top 10px
    right 0

  &__backgroundSplash
    height 500px

    position absolute
    right 0
    top 30px
    z-index -1

  &__form
    margin 0 auto
    padding 0
    width 100%

  &__input
  &__textarea
  &__select
  &__submit
    border none
    border-radius 0.25rem
    display inline-block
    box-sizing border-box
    margin 0.5rem 1%
    padding 0.5rem
    text-align left
    vertical-align top
    width 45%

  &__textarea
    display block
    width 92%

  &__submit
    background-color #c33
    color white
    font-weight bold
    text-align center
    width 92%

  &__text
    margin 0

  &__block
    display block
    margin 0.5rem

  @media all and (max-width 550px)
    &__container
      margin 1rem auto
      width 90%

    &__box
      margin 0
      width 100%

    &__input
    &__textarea
    &__submit
    &__select
      display block
      width 100%

    &__form
      margin 0 auto
      padding 0
      width 100%

    &__backgroundOrange
    &__backgroundWorker
    &__backgroundCircle
      display none

  @media all and (max-width 920px) and (min-width 551px)
    margin 0 auto

    &__container
      margin 1rem auto
      width 90%

    &__backgroundOrange
    &__backgroundWorker
    &__backgroundCircle
      display none

#map
  height 500px
