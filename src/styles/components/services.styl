.services
  background-image url(../images/metodo-bg-2.png)
  background-size cover
  color white

  &__container
    margin 0 auto
    padding 2.5rem 0
    width 1200px

  &__header
    text-align center

  &__list
    padding 2rem 0

  &__title
    border-bottom 4px solid white
    display inline-block
    font-size 2rem
    text-align center

  &__text
    display block
    font-size 1.2rem
    margin 0.5rem auto
    text-align center

  &__segment
    box-sizing border-box
    display inline-block
    margin 2rem auto 0 auto
    padding 6rem 0
    text-align center
    width 33%

    &Text
      border 2px solid white
      color white
      display inline-block
      margin 0
      padding 2rem

#fact
  background-image url(../images/gradient-bg.png),
                   url(../images/writing.jpg)
  background-position center center
  background-size cover

