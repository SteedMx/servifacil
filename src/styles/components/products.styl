.products
  &__container
    margin 0 auto
    padding 0
    width 1200px

  &__header
    margin 0 auto
    text-align center

  &__title
    border-bottom 4px solid red
    display inline-block
    font-size 2rem

  &__text
    text-align center

  &__section
    background-color red
    box-sizing border-box
    color white
    display inline-block
    padding 2rem
    text-align center
    vertical-align top
    width 49%

    &Title
      background-color red
      display inline-block
      padding 1rem
      position relative
      top -3rem

    &Text
      margin-top 0
      padding-top 0
      position relative
      top -2rem

  &__box
    border 4px solid blue
    box-sizing border-box
    padding 0 2rem 0rem 2rem
