.products
  background-color white

  &__container
    margin 0 auto
    padding 4rem 0
    width 1200px

  &__header
    margin 0 auto
    text-align center

  &__title
    border-bottom 4px solid #cc3333
    display inline-block
    font-size 2rem

  &__text
    text-align center

  &__sections
    display flex

  &__section
    box-sizing border-box
    color white
    display inline-block
    flex stretch
    padding 2rem
    text-align center
    vertical-align top
    width 49%

    &Title
      display block
      margin-bottom 2rem
      padding 1rem

    &Text
      margin-top 0
      padding-top 0
      position relative
      top -2rem

  &__box
    border 4px solid white
    box-sizing border-box
    height 100%
    padding 0 2rem 0rem 2rem

#product-crew
  background-image url(../images/purple-bg.png),
             url(../images/crew-bg.png)
  background-position center center

#product-vales
  background-image url(../images/purple-bg.png),
                   url(../images/vales-bg.png)
  background-position center center

