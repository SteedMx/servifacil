.nav
  background-color rgba(204, 51, 51, 1)
  display none
  font-family 'Flama Basic'
  font-weight bold
  overflow: visible
  position: relative
  height 105px

  &__container
    box-sizing border-box
    padding 1rem 2rem

  &__tabs
    align-content center
    align-items center
    display flex
    justify-content space-between
    list-style none
    margin 0
    padding 0

    #navfirst
      margin-right 30vw

    &Link
      color white
      font-size 1.1rem
      text-decoration none

    &Logo
      width 150px

  &__tabsLogo
    position absolute
    z-index 2000
    width 300px
    margin-top -3vh
    margin-left -7vw

  @media all and (min-width 701px) and (max-width 1200px)
    display block

    &__container
      padding 1rem
      width 100%

  @media all and (min-width 1201px)
    display block

    &__container
      margin 0 auto
      width 1200px
