.nav
  font-family 'Flama Basic'
  position fixed
  left 0
  top 0
  width 100vw
  z-index 50
  transition all 0.25s ease
  height 95px

  /*
  &[data-fixed='true']
    background-color #c33

  &[data-fixed='false']
    background-color transparent
  */

  &__container
    margin-top 15px
    align-items center
    align-content center
    box-sizing border-box
    display flex
    justify-content space-around
    padding 0 2rem

    &:before
      content: "";
      position: absolute;
      width: 100%;
      height: 2px;
      bottom: 0;
      left: 0;
      background-color: #fff;
      visibility: hidden;
      -webkit-transform: scaleX(0);
      transform: scaleX(0);
      -webkit-transition: all 0.3s ease-in-out 0s;
      transition: all 0.3s ease-in-out 0s;

    a.nav__link.active:first-child:before
      visibility: hidden;

    a.nav__link.active:before
      visibility: visible;
      -webkit-transform: scaleX(1);
      transform: scaleX(1);

  &__logo
    max-width 200px
    display block
    text-align center

  &__link
    position relative
    color white
    text-decoration none

    &:first-child
      margin-bottom 0

    &:hover
      color white

    &:before
      content: "";
      position: absolute;
      width: 100%;
      height: 2px;
      bottom: 0;
      left: 0;
      background-color: #fff;
      visibility: hidden;
      -webkit-transform: scaleX(0);
      transform: scaleX(0);
      -webkit-transition: all 0.3s ease-in-out 0s;
      transition: all 0.3s ease-in-out 0s;

    &:hover:before
      visibility: visible;
      -webkit-transform: scaleX(1);
      transform: scaleX(1);

  @media all and (max-width 800px)
    display none
