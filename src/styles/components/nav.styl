.nav
  background-color rgba(204, 51, 51, 1)
  display none
  align-items center
  font-family 'Flama Basic'
  font-weight bold
  overflow: visible
  position: relative
  height 105px

  &__container
    box-sizing border-box
    padding 1rem 2rem

  &__tabs
    align-content center
    align-items center
    display flex
    justify-content space-between
    list-style none
    margin 0
    padding 0

    #navfirst
      margin-right 15vw

    &Link
      color white
      font-size 1.1rem
      text-decoration none

    &Logo
      width 150px

  &__tabsLogo
    position absolute
    z-index 2000
    width 200px
    margin-top -35px
    margin-left -3vw

  @media all and (min-width 801px) and (max-width 1200px)
    display flex

    &__container
      padding 1rem
      width 100%

  @media all and (min-width 1201px)
    display flex

    &__container
      margin 0 auto
      width 1200px
