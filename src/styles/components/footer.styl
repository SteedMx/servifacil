.footer
  background-color white

  &__container
    margin 0
    padding 4rem 0

  &__header
    display block
    margin 0 auto
    text-align center

  &__section
    display inline-block
    vertical-align top
    margin 0 auto
    width 49%

  &__title
    border-bottom 4px solid red
    display inline-block
    font-size 2rem
    text-align center

  &__form
  &__input
  &__textarea
    box-sizing border-box
    width 100%

  &__input
  &__textarea
    border 1px solid gray
    border-radius 0.5rem
    margin 0.5rem auto
    padding 1rem

  &__text
    line-height 1.4
    margin-top 0

  &__privacy
    text-align center

  @media all and (min-width 1201px)
    &__container
      margin 0 auto
      width 1200px
