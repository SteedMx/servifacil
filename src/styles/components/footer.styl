.footer
  background-color rgb(40, 40, 40)

  &__container
    box-sizing border-box
    margin 0
    padding 4rem 2rem

  &__header
    display block
    margin 0 auto
    text-align center

  &__section
    display inline-block
    vertical-align top
    margin 0 auto
    width 49%

  &__title
    border-bottom 4px solid #cc3333
    color rgb(250, 250, 250)
    display inline-block
    font-size 2rem
    text-align center
    text-shadow 1px 1px 1px rgb(40, 40, 40)

  &__link
    &:link
    &:hover
    &:link
    &:visited
      color #c33

  &__form
  &__input
  &__textarea
    box-sizing border-box
    width 100%

  &__input
  &__textarea
  &__submit
    border 1px solid gray
    margin 0.5rem auto
    padding 1rem

  &__submit
    background-color #cc3333
    border none
    color rgb(250, 250, 250)
    font-weight bold
    width 100%

    &:hover
      cursor pointer

  &__text
    color rgb(250, 250, 250)
    line-height 1.4
    margin-top 0
    text-shadow 1px 1px 1px rgb(40, 40, 40)

  &__privacy
    color rgb(250, 250, 250)
    text-align center
    text-shadow 1px 1px 1px rgb(40, 40, 40)

  &__social
    margin 2rem 0 0 0
    text-align center

    &-icon
      color white
      font-size 2rem
      margin 0 0.5rem

  @media all and (max-width 700px)
    &__container
      box-sizing border-box
      display block
      padding 1rem
      width 100%

    &__section
      display block
      margin 1rem auto
      text-align center
      width 100%

    &__form
      width 100%

    &__box
      text-align center

  @media all and (min-width 701px) and (max-width 1200px)
    &__container
      box-sizing border-box
      padding 1rem
      width 100%

  @media all and (min-width 1201px)
    &__container
      margin 0 auto
      width 1200px
