.mosaic
  background-image url(../images/map-background.png)
  margin 0
  padding 0

  &__container
    margin 0 auto
    padding 14rem 0

  &__header
    background-color none
    text-align center

  &__box
    justify-content space-around
    margin-bottom -23rem
    position relative
    text-align center

  &__button
    background-color #c33
    border none
    color white
    display block
    font-weight bold
    margin 0 auto 10rem auto
    padding 1rem

    &:hover
      cursor pointer

  &__mainTitle
    border-bottom 4px solid #c33
    display inline-block
    font-size 2rem
    font-weight bold
    margin-top 0

  &__title
    color #cc3333
    display block
    font-weight bold
    margin 1rem
    padding 0
    text-align center

    &:link
      text-decoration none

    &:hover
      text-decoration underline

  &__item
    display inline-block
    text-decoration none
    margin 0 3rem
    width 300px

  &__picture
    margin 0 auto
    text-align center

  &__image
    height 180px
    margin 0 auto
    text-align center

  @media all and (max-width 800px)
    &__container
      width 50%

    &__box
      display block

    &__item
      display block
      margin 1rem auto
      width 100%

  @media all and (min-width 801px) and (max-width 1200px)
    &__container
      width 50%

  @media all and (min-width 1201px)
    &__container
      width 1200px
