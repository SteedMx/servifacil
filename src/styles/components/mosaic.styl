.mosaic
  background-color white
  margin 0
  padding 0

  &__container
    margin 0 auto
    padding 6rem 0

  &__header
    background-color none
    text-align center

  &__box
    display flex
    justify-content space-around

  &__mainTitle
    border-bottom 4px solid #c33
    display inline-block
    font-size 2rem
    font-weight bold
    margin-top 0

  &__title
    background-color #cc3333
    color white
    display block
    margin 0
    padding 1rem
    text-align center
    text-decoration none

  &__item
    display inline-block
    width 300px

  &__image
    max-width 100%

  @media all and (max-width 800px)
    &__box
      display block

    &__item
      display block
      margin 1rem auto

  @media all and (min-width 1201px)
    &__container
      width 1200px
