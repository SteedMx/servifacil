.mosaic
  background-image url(../images/hero/5.jpg)
  background-repeat no-repeat
  background-position center
  background-color #d9232f
  margin 0
  //margin-bottom: -444px;
  padding 0
  height 720px

  &:hover
    cursor pointer

  &__container
    margin 0 auto
    padding 6rem 0

  &__header
    background-color none
    text-align center

  &__box
    justify-content space-around
    margin-bottom 12rem
    position relative
    text-align center

  &__border
    border 3px solid #c33
    padding 10px
    width 350px
    max-width 80%
    max-height 70px
    margin 0 auto 10vh auto

  &__button
    background-color #c33
    border none
    color white
    display block
    font-weight bold
    margin-left auto
    margin-right auto

    padding 1rem

    &:hover
      cursor pointer

  &__mainTitle
    border-bottom 4px solid #c33
    display inline-block
    font-size 2rem
    font-weight bold
    margin-top 0

  &__title
    border 3px solid
    color #cc3333
    display block
    font-weight bold
    margin 1rem
    padding 10px
    text-align center

    &:link
      text-decoration none

    &:hover
      text-decoration underline

  &__item
    display inline-block
    text-decoration none
    margin 0 3rem
    width 300px

  &__picture
    margin 0 auto
    text-align center

  &__image
    height 180px
    margin 0 auto
    text-align center

  @media all and (max-width 600px)
    margin-bottom: 0px;
    &__container
      padding 4rem 0 0 0

    &__box
      background-color rgb(250, 250, 250)
      display block
      margin 0
      padding 2rem 0

    &__item
      display block
      margin 1rem auto
      width 100%

    &__image
      height 120px

    &__title
      font-size 1rem

  @media all and (min-width 601px) and (max-width 800px)
    margin-bottom: 0px;
    &__button
      margin 0 auto 8rem auto

    &__box
      margin-bottom -17rem

    &__item
      display inline-block
      margin 0 0.75rem
      vertical-align top
      width 180px

    &__picture
      margin 0

    &__image
      height auto
      margin 0
      width 70%

  @media all and (min-width 801px) and (max-width 1200px)
    &__container
      width 50%

    &__button
      display block
      margin 0 auto

  @media all and (min-width 1201px)
    &__container
      width 1200px
